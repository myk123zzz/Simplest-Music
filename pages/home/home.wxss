/* pages/home/home.wxss */

page {
  background-color: #f6f6f6;
  height: 100%;
}

.container_all {
  height: 100%;

}

.container_sub {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  height: 10%;
}

.container_title{
  height: 100%;
  display:flex;
  flex-direction:column;
  align-items: center;
  justify-content: center;
}

.title {
  font-family: PingFang SC;
  font-weight: 500;
  color: #000000;
  font-size: 44rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.logo {
  width: 100rpx;
  height: 90rpx;
}

.title-firstline {
  margin-top: 15rpx;
  display: flex;
  height: 100px;
}

.title_secondline {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #888888;
  height: 40%;
}

.container-power {
  margin-top: 5%;
  height: 65%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.choice_tip{
  font-size: 40rpx;
}
.power {
  height: 100%;
  margin-top: 30rpx;
  border-radius: 5px;
  width: 90%;
  padding-bottom: 1rpx;
}

.background {
  height: 300rpx;
  border-radius: 50rpx;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: -1;
}

.power_info {
  height: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.power_info_text {
  display: flex;
  flex-direction: column;
}


.power_info_text_tip {
  color: rgba(0, 0, 0, 0.4);
  font-size: 25rpx;
}


.swiper {
  margin-top: 10rpx;
  height: 20%;
}

.swiper_image-container {
  height: 100%;
  display: flex;
  justify-content: center;
}

.swiper_image{
  width: 100%;
  height: 100%;
}