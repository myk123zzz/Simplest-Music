/* pages/advanced/advanced.wxss */
page {
  background-color: rgb(246, 246, 246);
  height: 100%;
}

.container_all{
  height: 100%;
}

.search {
  padding-top: 20rpx;
  width: 90%;
  height: 5%;
  display: flex;
  align-items: center;
  margin: 0rpx auto;
}

.search-icon {
  height: 40rpx;
  width: 40rpx;
}

.search-input {
  flex: 4;
  background-color: rgb(202, 196, 196);
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
}

.search-cancel {
  flex: 0.5;
  font-size: 30rpx;
  color: #aaa;
  text-align: center;
  margin-left: 30rpx;
}

.course {
  padding-top: 10rpx;
  height: 85%;
}

.course-show {
  height: 5%;
  margin-top: 30rpx;
  display: flex;
  align-items: center;
}

.course-category {
  margin-left: 50rpx;
  font-size: 35rpx;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  font-weight:700;
}

.course-all {
  position: absolute;
  right: 0;
  margin-right: 35rpx;
  color: rgb(236, 93, 77);
  font-weight:500;
}

.course-content{
  height: 95%;
}
.course-list{
  height: 23.5%;
  display:flex;
  justify-content: center;
}
.course-item{
  border-radius:5%;
  width: 90%;
  margin-top: 40rpx;
  display: flex;
  background-color: white;
  position: relative; /* 添加相对定位 */
}

.item-icon{
  padding-left: 5%;
  padding-bottom: 2%;
  padding-top: 2%;
  width: 30%;
  height: 90%;
}

.item-info{
  display: flex;
  flex-direction: column;
  width: 60%;
  height: 100%;
}
.item-title{
  margin-top: 10%;
  height: 30%;
  margin-left: 50rpx;
  font-weight:600;
}
.item-detail{
  margin-top: 10rpx;
  margin-left: 50rpx;
  height: 70%;
  font-weight:600;
  font-size: 24rpx;
  color: rgb(187, 187, 187);
}
.item-button{
  border-radius:10%;
  position: absolute; /* 添加绝对定位 */
  bottom: 20rpx; /* 调整与底部的距离 */
  right: 20rpx; /* 调整与右侧的距离 */
  background-color: rgb(255, 202, 40);
  color: black;
  font-size: 24rpx;
  width: 120rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight:600;
}

.load-more {
  height: 5%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  height: 20rpx;
  font-size: 32rpx;
  }
  